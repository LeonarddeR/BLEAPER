Import("env")
env.Append(CPPPATH="#include")

sources = [
	"BLEAPER.cpp",
	"RTMidiIn.cpp"
]
libs = ["WindowsApp"]

env.Append(CPPFLAGS=["/EHsc", "/std:c++17"])
env.Append(PDB="${TARGET}.pdb")
env.Append(LINKFLAGS='/OPT:REF')
env.SharedLibrary(
	target="reaper_bleaper",
	source=sources, LIBS=libs,
)
